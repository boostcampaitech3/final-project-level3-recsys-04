{
  "name": "Github Recommendation Extension",
  "description": "This library adds repository recommendation to Github.com",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/black-cat.png",
      "32": "/images/black-cat.png",
      "48": "/images/black-cat.png",
      "128": "/images/black-cat.png"
    }
  },
  "icons": {   
    "16": "/images/black-cat.png",
    "32": "/images/black-cat.png",
    "48": "/images/black-cat.png",
    "128": "/images/black-cat.png"
  },
  "content_scripts": [
    { "matches": ["*://*.github.com/"],
	    "js": ["contentScript.js"],
	    "exclude_matches": []
    }
  ]
}

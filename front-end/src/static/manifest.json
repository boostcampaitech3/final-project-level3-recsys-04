{
  "name": "Github Recommendation Extension",
  "description": "This library adds repository recommendation to Github.com",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "black-cat.png",
      "32": "black-cat.png",
      "48": "black-cat.png",
      "128": "black-cat.png"
    }
  },
  "icons": {   
    "16": "black-cat.png",
    "32": "black-cat.png",
    "48": "black-cat.png",
    "128": "black-cat.png"
  },
  "content_scripts": [
    { "matches": ["<all_urls>"],
	    "js": ["contentScript.js"],
	    "exclude_matches": []
    }
  ]
}
